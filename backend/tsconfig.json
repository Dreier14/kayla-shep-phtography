{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "allowImportingTsExtensions": true,
        "outDir": "dist"
    },
    "include": ["./api/*.ts", "./server/**/*.ts"]
}
